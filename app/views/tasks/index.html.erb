<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= check_box("tag", tag.id, {checked: task.completed}) %>
      -
      <%= link_to 'edit', edit_task_path(task) %>
      -
      <%= link_to 'delete', task_path(task), method: 'delete', data: { confirm: 'Are you sure? Really?' } %>

    </li>
  <% end %>
  <p><%= link_to 'New task', new_task_path %></p>

</ul>
