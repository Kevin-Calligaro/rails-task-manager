<h1>New Task</h1>
<div class="form">
  <%= form_for(@task) do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title, class: "input"%>

  <%= f.label :details %>
  <%= f.text_area :details, class: "input" %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>
</div>

