<h1>Edit task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "input"%>

  <%= f.label :details %>
  <%= f.text_area :details, class: "input"%>

  <%= f.label :completed %>
  <%= f.check_box :completed%>

  <%= f.submit %>

<% end %>
<%= link_to "Back to list", tasks_path %>
